{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Target",
      "cwd": "${workspaceRoot}",
      "executable": "${workspaceFolder}/build/target-debug.elf",
      "request": "launch",
      "type": "cortex-debug",
      "servertype": "openocd",
      "serverpath": "${workspaceFolder}/build/openocd/bin/openocd",
      "runToMain": true,
      "armToolchainPath": "${workspaceRoot}/build",
      "toolchainPrefix": "stm8",
      "configFiles": [
        "${workspaceRoot}/build/openocd.cfg"
      ],
      "svdFile": "build/target.svd",
      "preLaunchTask": "debug-deps-target"
    },
    {
      "name": "Test",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/test/tests",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "osx": {
        "MIMode": "lldb"
      },
      "linux": {
        "MIMode": "gdb"
      },
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "debug-deps-test"
    }
  ]
}
